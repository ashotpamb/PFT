@model UserRegister

@{
    ViewBag.Title = "Registartion";
    Layout = "_Layout";
}
<h1>@ViewData["Title"]</h1>
    <div class="card shadow">
        <div class="card-body">
            <h5 class="card-title text-center mb-4">Register</h5>
            <form method="post" asp-controller="User" asp-action="Register">
                @* @Html.AntiForgeryToken() *@
                <div class="mb-3">
                    <label for="inputName" class="form-label">Full Name</label>
                    <input type="text" class="form-control" id="inputName" placeholder="Enter your full name" name="FullName">
                </div>
                <div class="mb-3">
                    <label for="inputEmail" class="form-label">Email address</label>
                    <input type="email" class="form-control" id="inputEmail" placeholder="Enter">
                </div>
                <div class="mb-3">
                    <label for="inputPassword" class="form-label">Password</label>
                    <input type="password" class="form-control" id="inputPassword" placeholder="Password">
                </div>
                <div class="mb-3">
                    <label for="confirmPassword" class="form-label">Confirm Password</label>
                    <input type="password" class="form-control" id="confirmPassword" placeholder="Confirm password">
                </div>
                <button type="submit" class="btn btn-primary w-100">Register</button>
            </form>
        </div>
    </div>

